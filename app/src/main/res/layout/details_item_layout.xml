<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemNameTv"
            android:text="PRODUCT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tool:layout_constraintBottom_toBottomOf="@+id/itemPriceTv"
            tool:layout_constraintEnd_toStartOf="@+id/itemPriceTv"
            tool:layout_constraintStart_toStartOf="parent"
            tool:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemDescTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"
            android:text=" how are youhello  how are youhello  how are youhello  how are youhello  how are youhello  how are youhello  how are youhello  how are youhello  how are youhello  how are youhello  how are youhello "
            tool:layout_constraintBottom_toBottomOf="parent"
            tool:layout_constraintEnd_toStartOf="@+id/itemPriceTv"
            tool:layout_constraintHorizontal_bias="0.0"
            tool:layout_constraintStart_toStartOf="@+id/itemNameTv"
            tool:layout_constraintTop_toBottomOf="@+id/itemNameTv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Price: 3697.5"
            android:textColor="@color/purple_700"
            android:textSize="18sp"
            android:textStyle="bold"
            tool:layout_constraintBottom_toBottomOf="parent"
            tool:layout_constraintEnd_toEndOf="parent"
            tool:layout_constraintHorizontal_bias="1.0"
            tool:layout_constraintStart_toStartOf="parent"
            tool:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>